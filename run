
#/bin/bash
case "$1" in
	"init")
		mkdir build
		cd build
		cmake ../
		make
	;;
	"build")
		cd build
		make
	;;
	"start")
		cd build/build/Release/
		./MyVolumeRaycaster
	;;
	"rs")
		cd build
		make
		cd build/Release/
		./MyVolumeRaycaster
	;;
	*)
		echo "You have failed to specify what to do correctly."
	exit 1
	;;
esac
